<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="16dp"
    android:background="#FAFAFA">

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".MainActivity"
        android:spacing="12dp">

        <!-- Imię -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            android:padding="12dp"
            android:backgroundTint="#FFF9F2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wybierz swoje imię: "
                    android:textSize="15sp"
                    android:textColor="#212121"/>

                <EditText
                    android:id="@+id/nameEditText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="15sp"
                    android:inputType="textPersonName"
                    android:padding="8dp"
                    android:layout_marginStart="8dp"
                    android:background="@android:drawable/edit_text"
                    android:textColor="#212121"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Rasa postaci -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            android:padding="12dp"
            android:backgroundTint="#E3F2FD">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wybierz rasę: "
                    android:textSize="14sp"
                    android:textColor="#212121"
                    android:layout_marginEnd="8dp" />

                <ImageView
                    android:id="@+id/characterImageView"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="8dp"
                    android:src="@android:drawable/ic_menu_gallery"
                    android:contentDescription="Character Image"/>

                <Spinner
                    android:id="@+id/raceSpinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Przedmioty -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            android:padding="12dp"
            android:backgroundTint="#FFF9F2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/item1CheckBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lembasy"
                    android:textColor="#212121"
                    android:layout_marginEnd="8dp"/>
                <CheckBox
                    android:id="@+id/item2CheckBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Płaszcz"
                    android:textColor="#212121"
                    android:layout_marginEnd="8dp"/>
                <CheckBox
                    android:id="@+id/item3CheckBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ciepła herbatka"
                    android:textColor="#212121"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Marsz (RadioButton) -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            android:padding="12dp"
            android:backgroundTint="#E3F2FD">

            <RadioGroup
                android:id="@+id/walkRadioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/walk1RadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ostrożny marsz"
                    android:textColor="#212121"/>
                <RadioButton
                    android:id="@+id/walk2RadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Zwykły marsz"
                    android:textColor="#212121"/>
                <RadioButton
                    android:id="@+id/walk3RadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cała naprzód"
                    android:textColor="#212121"/>
            </RadioGroup>
        </androidx.cardview.widget.CardView>

        <!-- SeekBar i czas marszu -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            android:padding="12dp"
            android:backgroundTint="#FFF9F2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <SeekBar
                    android:id="@+id/walkTimeSeekBar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:max="100"
                    android:progress="10"
                    android:progressTint="#64B5F6"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:id="@+id/walkTimeTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Czas marszu: 10"
                    android:textSize="14sp"
                    android:textColor="#212121"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Switch elfich ścieżek -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            android:padding="12dp"
            android:backgroundTint="#E3F2FD">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Użyj elfich ścieżek: "
                    android:textColor="#212121"
                    android:padding="10dp"/>

                <Switch
                    android:id="@+id/elfPathSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:thumbTint="#64B5F6"
                    android:trackTint="#BBDEFB"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Morale drużyny -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            android:padding="12dp"
            android:backgroundTint="#FFF9F2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Morale drużyny: "
                    android:textColor="#212121"
                    android:padding="10dp"/>

                <RatingBar
                    android:id="@+id/teamMoraleRatingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:stepSize="1"
                    android:progressTint="#64B5F6"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Date i Time Picker -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            android:padding="12dp"
            android:backgroundTint="#E3F2FD">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <DatePicker
                    android:id="@+id/dateDatePicker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:datePickerMode="spinner"/>
                <TimePicker
                    android:id="@+id/timeTimePicker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:timePickerMode="spinner"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Chronometer i przyciski treningu -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            android:padding="12dp"
            android:backgroundTint="#FFF9F2">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Czas treningu: "
                        android:textColor="#212121"/>

                    <Chronometer
                        android:id="@+id/trainingTimeChronometer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <Button
                        android:id="@+id/startTrainingButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rozpocznij trening"
                        android:backgroundTint="#1976D2"
                        android:textColor="#FFFFFF"
                        android:layout_marginEnd="8dp"/>

                    <Button
                        android:id="@+id/endTrainingButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Zakończ trening"
                        android:backgroundTint="#1976D2"
                        android:textColor="#FFFFFF"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Czas do wymarszu i ProgressBar -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            android:padding="12dp"
            android:backgroundTint="#E3F2FD">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/timeToGoTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Czas do wymarszu: 30"
                    android:textSize="14sp"
                    android:textColor="#212121"
                    android:layout_marginEnd="16dp" />

                <ProgressBar
                    android:id="@+id/timeToWalkProgressBar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:indeterminate="false"
                    android:max="100"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:progressTint="#64B5F6"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Start podróży -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            android:padding="12dp"
            android:backgroundTint="#1976D2">

            <Button
                android:id="@+id/startJourneyButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rozpocznij podróż"
                android:textColor="#FFFFFF"
                android:backgroundTint="#1976D2"/>
        </androidx.cardview.widget.CardView>

        <!-- Podsumowanie postaci -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            android:padding="12dp"
            android:backgroundTint="#FFF9F2">

            <TextView
                android:id="@+id/characterSummaryTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Podsumowanie postaci: "
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#212121"/>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
